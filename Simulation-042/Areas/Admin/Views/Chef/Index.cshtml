@model List<ChefGetVM>
<div class="container">
    <div class="row">
        <div class="col-12">
            <a class="btn btn-success" asp-action="Create">Create</a>
        </div>
   
      <table class="table table-striped">
          <thead>
              <tr>
                  <th scope="col">#</th>
                  <th scope="col">Image</th>
                  <th scope="col">Name</th>
                  <th scope="col">Category Name</th>
              </tr>
          </thead>
          <tbody>
                @foreach(var project in Model)
                {
                    
                  <tr>
                     <th scope="row">@project.Id</th>
                     <td><img src="~/assets/images/@project.ImagePath" /></td>
                     <td>@project.Name</td>
                     <td>@project.CategoryName</td>
                     <td>
                           <a asp-action="Update" asp-route-id="@project.Id" class="btn btn-warning">Update</a>
                           <a  asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Delete</a>
                     </td>

                  </tr>
                }
          </tbody>
      </table>
    </div>
</div>